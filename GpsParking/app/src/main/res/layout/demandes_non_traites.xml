<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_light_background"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:elevation="10dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/cardViex_validation_parking"
    android:layout_marginTop="60dp"
    android:paddingBottom="5dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Demande:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/backgrgoud_validation"
            android:id="@+id/titre_cardview_vlidation"
            android:paddingLeft="10dp"
            ></TextView>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parking"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motif"
        android:layout_marginTop="70dp"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="40dp"
        android:text=":"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="70dp"
        android:text=":"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="40dp"
        android:text="Rabat agdal"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/parking_demande"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="70dp"
        android:text="Abdellatif"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp"
        android:textStyle="bold"
        android:id="@+id/motif_demande"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:background="@drawable/btn_valider"
        android:text="Valider"
        android:layout_marginLeft="185dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_valider"
        >
    </Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:background="@drawable/btn_rejetter"
        android:text="Rejetter"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_rejetter"
        >
    </Button>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pas de parking Ã  valider"
        ></TextView>
</androidx.cardview.widget.CardView>